
<div class="col">
  <div class="card mb-3" style="width: 16rem;height: 29rem;" >
    <%= image_tag item.item_pic_url, class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title"><%= item.title %></h5>
      <p class="card-text" style="height: 3rem;"><%= item.description %></p>
      <p class="card-text"><small class="text-muted"><%= item.price %> â‚¬</small></p>
      <a href="<%= item_path(item) %>" class="btn btn-info">Show </a>
      <% if user_signed_in? %>
      <%= link_to 'Buy', adding_path(item), method: 'post', class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
